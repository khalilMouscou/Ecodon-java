<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="673.0" prefWidth="704.0" stylesheets="@style/login.css"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21.0.2"
            fx:controller="org.example.Controllers.AuthController">
    <children>
        <!-- Email Field -->
        <TextField fx:id="loginEmailField" layoutX="214.0" layoutY="210.0" prefWidth="298.0"
                   promptText="Email" />

        <!-- Password Field -->
        <PasswordField fx:id="loginPasswordField" layoutX="214.0" layoutY="283.0"
                       prefHeight="40.0" prefWidth="298.0" promptText="Password" />

        <!-- Login Button - now calls login() method -->
        <Button layoutX="233.0" layoutY="350.0" onAction="#login"
                prefWidth="90" text="Login" styleClass="login-button" />

        <!-- Signup Button - now calls showSignupPage() method -->
        <Button layoutX="352.0" layoutY="350.0" onAction="#showSignupPage"
                prefWidth="90" text="Signup" styleClass="signup-button" />

        <!-- Title -->
        <Label layoutX="301.0" layoutY="141.0" text="Login" styleClass="title-label">
            <font>
                <Font size="27.0" />
            </font>
        </Label>

    </children>
</AnchorPane>