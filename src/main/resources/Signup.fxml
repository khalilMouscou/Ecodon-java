<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="676.0" prefWidth="750.0" stylesheets="@style/signup.css"
            xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21.0.2"
            fx:controller="org.example.Controllers.AuthController">
    <children>
        <!-- Registration Form Fields -->
        <TextField fx:id="regNameField" layoutX="229.0" layoutY="147.0" prefWidth="300.0"
                   promptText="Full Name" styleClass="form-field" />

        <TextField fx:id="regTelField" layoutX="229.0" layoutY="202.0" prefWidth="300.0"
                   promptText="Phone Number" styleClass="form-field" />

        <TextField fx:id="regAddressField" layoutX="229.0" layoutY="257.0" prefWidth="300.0"
                   promptText="Address" styleClass="form-field" />

        <TextField fx:id="regEmailField" layoutX="229.0" layoutY="315.0" prefWidth="300.0"
                   promptText="Email" styleClass="form-field" />

        <PasswordField fx:id="regPasswordField" layoutX="229.0" layoutY="370.0" prefWidth="300.0"
                       promptText="Password" styleClass="form-field" />

        <PasswordField fx:id="regConfirmPasswordField" layoutX="229.0" layoutY="425.0" prefWidth="300.0"
                       promptText="Confirm Password" styleClass="form-field" />

        <!-- Action Buttons -->
        <Button layoutX="255.0" layoutY="485.0" onAction="#register"
                prefWidth="120.0" text="Sign Up" styleClass="primary-button" />

        <Button layoutX="395.0" layoutY="485.0" onAction="#showLoginPage"
                prefWidth="120.0" text="Back to Login" styleClass="secondary-button" />

        <!-- Title -->
        <Label layoutX="319.0" layoutY="90.0" text="Create Account" styleClass="title-label">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
    </children>
</AnchorPane>